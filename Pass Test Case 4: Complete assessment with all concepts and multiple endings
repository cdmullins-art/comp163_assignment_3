student_name = "Che Mullins"
current_gpa = 3.2
study_hours = 20
social_points = 50
stress_level = 46

print("Welcome to College Life Adventure!")
print(f"Student: {student_name}")
print(f"GPA: {current_gpa}")
print(f"Study hours: {study_hours}")
print(f"Social points: {social_points}")
print(f"Stress level: {stress_level}")

print("\nChoose your course load:")
print("A) Light (12 credits)")
print("B) Standard (15 credits)")
print("C) Heavy (18 credits)")

choice = input("Your choice: ").strip().upper()

if choice == "A":
    study_hours += 5
    stress_level -= 5
elif choice == "B":
    study_hours += 10
    stress_level += 5
elif choice == "C":
    study_hours += 15
    if current_gpa >= 3.0:
        stress_level += 10
    else:
        stress_level += 20
else:
    print("Invalid choice, you stay undecided.")

# --- Study Strategy ---
options = ["Programming", "Math", "English", "History"]
print("\nStudy options:", ", ".join(options))
study_choice = input("Which subject will you study? ").strip().title()

if study_choice not in options:
    print("That subject is not available. You wasted time!")
    stress_level += 5
elif study_choice == "Programming" or study_choice == "Math":
    print(f"You focused hard on {study_choice}, GPA improves more!")
    current_gpa += 0.3
    study_hours += 5
else:
    print(f"You studied {study_choice}, GPA improves slightly.")
    current_gpa += 0.1

# --- Final Assessment ---
print("\n--- Final Assessment ---")

# Identity operator example
if type(current_gpa) is float:
    print("GPA type check passed (float).")

if current_gpa >= 3.5:
    if stress_level < 40:
        ending = "You graduate with honors!"
    else:
        ending = "You graduate, but stress took a toll."
elif current_gpa >= 2.0:
    if social_points is not None and (social_points > 40 or stress_level < 50):
        ending = "You balanced academics and life reasonably well."
    else:
        ending = "You passed, but it was a rough ride."
else:
    if stress_level > 70:
        ending = "You struggled and had to retake courses."
    else:
        ending = "Barely passed, but still moving forward."

print(ending)

print("\nFinal Stats:")
print(f"GPA: {current_gpa:.2f}, Study hours: {study_hours}, Social points: {social_points}, Stress: {stress_level}")
